#header
    background: color-header-background
    padding-bottom: nav-height
    position: relative

#header-outer
    height: 100%
    position: relative

#header-inner
    position: relative

#header-title
    clearfix()
    text-align: center
    padding: 5px 5px
    .logo-wrap, .subtitle-wrap
        float: left
    .subtitle-wrap
        padding: 6px
        margin-left: 20px
    .subtitle
        font-size: 22px
        font-style: italic
        line-height: 28px
        color: color-nav-foreground
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)
    .maintitle
        font-size: 48px
        font-style: bold
        line-height: 52px 
        color: #ffff00
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)
